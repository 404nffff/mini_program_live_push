/* pages/push/push.wxss */
.shop {
  color: #fff;
  position: fixed;
  top: 60rpx;
  left: 36rpx;
  width:640rpx;
  height: 120rpx;
}
.shopName {
  position: relative;
  width: 63%;
  /* // padding: 11px 0 25px; */
  height: 120rpx;
  background:rgba(0,0,0,.5);
  opacity: 0.5;
  border-radius: 90rpx;
}

.logo {
  position: absolute;
  left: 22rpx;
  width: 100rpx;
  height: 100rpx;
  top: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.logo img {
  width: 100%;
}
.logoName {
  position: absolute;
  left: 140rpx;
  top: 26rpx;
  color: #fff;
  max-width: 396rpx;
}
.logoName .first {
  font-size: 24rpx;
}
.logoName .second {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.bottom_box_list{
  width:100%;
  height: 140rpx; 
  position:absolute;
  bottom:60rpx;
}
.bottom_box
{
  position: relative;
  width: 100rpx; 
  height: 140rpx; 
  margin-left:calc(100% / 8 - 50rpx); 
  margin-right:calc(100% / 8 - 50rpx);
  display:inline-block;
}

.bottom_button
{
  display:inline-block;
  position: absolute;
  width: 100rpx; 
  height: 100rpx; 
}

.bottom_button :active{
  opacity:0.55;
}

.bottom_icon
{
  width: 68rpx; 
  height: 68rpx;
  display:inline-block;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}
.bottom_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  width: 100%;
  font-size:24rpx;
  bottom: 0;
  text-align: center;
}

.danmu_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  width: 60%;
  font-size:28rpx;
  bottom: 0;
  left: 40rpx;
  text-align: left;
}

.peonum_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  font-size:28rpx;
  top: 160rpx;
  right: 20rpx;
  text-align: left;
}

.danmu_list {
  width:90%; 
  position:absolute;
  bottom:260rpx;
  left: 20rpx;
  color: #fff;
  font-size: 28rpx;
  height: 400rpx;
}
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}

.danme_item {
  border: 2rpx solid #ccc;
  color: #fff;
  font-size: 24rpx;
  height: auto;
  width: 400rpx;
  padding: 10rpx 30rpx;
  word-break: break-all;word-wrap:break-word;white-space:pre-line;
  margin: 20rpx;
  background:rgba(0,0,0,.5);
  opacity: 0.5;
  border-radius: 90rpx;
  
}

.danmu_name {
  float: left;
}

.danmu_marks {
  float: left;
  margin: 0 10rpx;
}